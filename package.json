{
  "name": "ndoojs",
  "version": "1.0.0",
  "description": "ndoojs",
  "main": "index.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ndoojs/ndoojs.git"
  },
  "scripts": {
    "postinstall": "bower install",
    "start:test": "karma start test/conf/unit.conf.js --browsers=PhantomJS",
    "start:test-dev": "karma start test/conf/unit.conf.js --browsers=Chrome",
    "start:watch": "acmd watch",
    "start:build": "acmd run",
    "start:dist": "cat js/ndoo_prep.js js/ndoo_lib.js js/ndoo.js js/ndoo_block.js js/ndoo_service.js > dist/ndoo_all.js && cat js/ndoo_prep.js js/ndoo.js js/ndoo_block.js js/ndoo_service.js > dist/ndoo_slim.js && uglifyjs -rco dist/ndoo_all.min.js dist/ndoo_all.js && uglifyjs -rco dist/ndoo_slim.min.js dist/ndoo_slim.js",
    "test": "karma run",
    "gen:doc": "jsdoc -c jsdoc.conf js/*.js readme.md",
    "cpjs": "cp -fr js/*.js docs/example/js/"
  },
  "author": "chenglifu",
  "devDependencies": {
    "autocommand-cli": "github:thinkjs/autocommand-cli#f8d086d",
    "bower": "^1.7.9",
    "coffee-script": "^1.10.0",
    "jade": "^1.11.0",
    "jasmine-core": "^2.3.4",
    "jsdoc": "^3.4.0",
    "karma": "^0.13.2",
    "karma-chrome-launcher": "^0.2.0",
    "karma-cli": "^1.0.1",
    "karma-coffee-preprocessor": "^0.3.0",
    "karma-jasmine": "^0.3.6",
    "karma-phantomjs-launcher": "^0.2.0",
    "markdown-js": "0.0.3",
    "node-sass": "^3.8.0",
    "phantomjs": "^1.9.18",
    "phantomjs-polyfill": "0.0.1",
    "uglifyjs": "^2.4.10"
  }
}
